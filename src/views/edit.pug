extends base.pug

block content
    h1 Update Video
    form(method="POST")
        input(name="title" value=video.title, required)
        input(name="description" placeholder="Description" type="text" value=video.description required, minlength=20)
        input(name="hashtags" placeholder="Hashtags, separated by comma." value=video.hashtags.join() type="text" required)
        input(value="Save" type="submit")
